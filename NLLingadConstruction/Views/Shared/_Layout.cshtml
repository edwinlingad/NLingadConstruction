<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/edhelpers.css" rel="stylesheet" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
<body>
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <div id="waiting">
        <div class="ed-center-both">
            <img src="~/Content/Images/small-logo.png" />
        </div>
        <div class="ed-center-both">
            <i class="fa fa-spinner fa-pulse fa-5x text-center"></i>
        </div>

        @*<h3 class="text-center">loading...</h3>*@
    </div>



    <div id="body" style="display: none;">
        <div class="navbar navbar-inverse navbar-fixed-top cbp-af-header">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#top" id="brand-logo">
                        <img class="img-responsive" src="~/Content/Images/small-logo.png" />
                        @*<img class="img-responsive" src="/Content/Images/logo.png" />*@
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="active"><a href="#top">Home</a></li>
                        <li><a href="#profile">Company profile</a></li>
                        <li><a href="#projects">Succesful projects</a></li>
                        @*<li><a href="#testimonials">Testimonials</a></li>*@
                        <li><a href="#contact">Contact us</a></li>
                    </ul>
                    @*@Html.Partial("_LoginPartial")*@
                </div>
            </div>
        </div>
        <div class="container-fluid body-content">
            @RenderBody()

            <footer class="row text-center">
                <div class="like-page wow fadeInDown">
                    <div class="">
                        <a class="facebook-icon" href="https://www.facebook.com/sharer/sharer.php?sdk=joey&u=http%3A%2F%2Fnllingad-construction.azurewebsites.net%2F&display=popup&ref=plugin&src=share_button" target="_blank">
                            <i class="fa fa-facebook-square fa-2x"></i>
                        </a>
                        <a class="twitter-icon" href="https://twitter.com/home?status=Check%20out%20Nelson%20Lingad%27s%20website-%20http://nllingad-construction.azurewebsites.net" target="_blank">
                            <i class=" fa fa-twitter-square fa-2x"></i>
                        </a>
                        <a class="gplus-icon" href="https://plus.google.com/share?url=http%3A%2F%2Fnllingad-construction.azurewebsites.net" target="_blank">
                            <i class="fa fa-google-plus-square fa-2x"></i>
                        </a>
                    </div>
                    <div class="like-text">
                        Like the page? Share it!
                    </div>
                </div>
                <div class="developer wow fadeInLeft">
                    Designed and developed<span> by</span> Edwin Lingad
                </div>
            </footer>

            <div id="goto-top-button-div">
                <a href="#top">
                    <i class="fa fa-chevron-circle-up fa-4x"></i>
                </a>
            </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            <script src="~/Scripts/jquery.easing.1.3.js"></script>
            <script src="~/Scripts/classie.js"></script>
            <script src="~/Scripts/cbpAnimatedHeader.min.js"></script>
            <script src="~/Scripts/wow.min.js"></script>
            @*<script src="~/Scripts/jquery.stellar.min.js"></script>*@
            <script src="~/Scripts/Typescripts/edHelpers.js"></script>
            <script src="~/Scripts/Typescripts/site.js"></script>
            @RenderSection("scripts", required: false)
        </div>
    </div>
</body>
</html>
